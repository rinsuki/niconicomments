{
  "name": "@xpadev-net/niconicomments",
  "version": "0.2.4",
  "description": "NiconiComments is a comment drawing library that is somewhat compatible with the official Nico Nico Douga player.",
  "main": "dist/bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c rollup.config.js && pegjs -o ./src/niwango.js ./src/niwango/niwango.pegjs",
    "watch": "rollup -c rollup.config.js -w",
    "typedoc": "typedoc --options tsdoc.json --out ./docs/type/ ./src/main.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpadev-net/niconicomments.git"
  },
  "keywords": [
    "niconico"
  ],
  "author": "xpadev(xpadev.net)",
  "bugs": {
    "url": "https://github.com/xpadev-net/niconicomments/issues"
  },
  "files": [
    "dist/bundle.js"
  ],
  "homepage": "https://xpadev.net/niconicomments/docs/",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "rollup": "~2.66",
    "typedoc": "^0.22.13",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.6.3"
  }
}
